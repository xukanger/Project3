<h1>导入考生信息</h1>
<button id="upload" type="button" class="btn btn-primary">上传Excel文件</button>
<br/>
<input id="excelPath" type="text" style="width:600px"/>
<script>
    jQuery(function(){
        excelUpload();
        function excelUpload(){
            var excelUploader = new qq.FileUploaderBasic({
                button: document.getElementById('upload'),
                action: '/bops/bopsUser/excelUpload',
                allowedExtensions: ['xls','xlsx'],
                onComplete: function(id, fileName, res){
                    var btn = jQuery(this.button);
                    if(!res && !res.data){
                        btn.notify('上传出现异常，请稍候重试！', "error");
                        return;
                    }
                    if(res && res.result == 0){
                        $('#excelPath').val(res.data.path);
                    }else{
                        btn.notify(res.message, "error");
                    }
                },
                messages: {
                    typeError: "请上传xls,.xlsx格式的文件"
                },
                showMessage: function(msg){
                    btn.notify(res.message, "success");
                }
            });
        }
    })
</script>
